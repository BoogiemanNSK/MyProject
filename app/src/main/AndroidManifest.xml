            android:name=".prepare.EnterName"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Path"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Map"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Inventory"
            android:screenOrientation="portrait" />
        <activity
            android:name=".prepare.AbilitiesChoice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Action"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fight"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Trade"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Journal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>